{
  "name": "netlify-graphql-api",
  "private": true,
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "start": "serverless offline start",
    "test-watch": "jest --passWithNoTests --watch",
    "deploy:aws": "serverless deploy -v --stage dev  --force",
    "check-types": "tsc --outDir .tmp",
    "eslint:fix": "eslint src --fix",
    "eslint": "eslint src",
    "format": "prettier --write"
  },
  "dependencies": {
    "apollo-server-lambda": "^2.11.0",
    "aws-sdk": "^2.861.0",
    "deepmerge": "^4.2.2",
    "email-validator": "^2.0.4",
    "graphql": "^15.5.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-fields": "^2.0.3",
    "graphql-relay": "^0.6.0",
    "graphql-tools": "^6.0.11",
    "moment": "^2.25.1",
    "serverless-webpack": "^5.3.3",
    "sls": "^0.1.0",
    "typescript": "^3.9.7",
    "uuid": "^8.3.2",
    "webpack": "^4.44.1",
    "webpack-node-externals": "^2.5.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.3.0",
    "jest": "^25.3.0",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "serverless": "^1.67.0",
    "serverless-offline": "^6.1.4",
    "serverless-prune-plugin": "^1.4.2",
    "ts-loader": "^8.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-optional-chaining"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./src/tests/config/setupFilesAfterEnv.js"
    ],
    "testPathIgnorePatterns": [
      ".integration.test.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
